#!/usr/bin/env bash

# Function to display DNS record information
display_dns_record() {
    local domain=$1
    local subdomain=$2
    local record_type=$3
    local destination=$4

    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script logic
if [ "$#" -eq 1 ]; then
    # Only domain provided, display info for all required subdomains
    domain=$1
    display_dns_record "$domain" "www" "A" "$(dig +short $domain www)"
    display_dns_record "$domain" "lb-01" "A" "$(dig +short $domain lb-01)"
    display_dns_record "$domain" "web-01" "A" "$(dig +short $domain web-01)"
    display_dns_record "$domain" "web-02" "A" "$(dig +short $domain web-02)"
elif [ "$#" -eq 2 ]; then
    # Domain and subdomain provided, display info for the specified subdomain
    domain=$1
    subdomain=$2
    record_type="A"
    destination=$(dig +short $domain $subdomain)
    display_dns_record "$domain" "$subdomain" "$record_type" "$destination"
else
    echo "Usage: $0 <domain> [<subdomain>]"
    exit 1
fi
