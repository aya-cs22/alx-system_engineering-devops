#!/usr/bin/env bash
#The redirection must be a “301 Moved Permanently”

sudo apt-get update
sudo apt-get install nginx -y
sudo echo "<h1>Hello World!</h1>" >> /var/www/html/index.html
sudo sed -i '/listen 80 default_server /a rewitr ^/redirect_me https://www.linkedin.com/in/aya-anwar-473115279/;' /etc/nginx/sites-available/default
sudo service nginx restart
