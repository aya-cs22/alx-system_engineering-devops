#!/usr/bin/env bash

# Update package lists
sudo apt-get update

# Install Nginx
sudo apt-get install nginx -y

# Create index.html with "Hello World!" message
sudo bash -c 'echo "<h1>Hello World!</h1>" > /var/www/html/index.html'

# Configure Nginx for redirection
sudo sed -i '/listen 80 default_server/a \
    rewrite ^/redirect_me$ https://www.linkedin.com/in/aya-anwar-473115279/ permanent;' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
sudo service nginx restart





# #!/usr/bin/env bash
# #The redirection must be a “301 Moved Permanently”

