#!/usr/bin/env bash

# Update package lists
sudo apt-get update

# Install Nginx web server
sudo apt-get install -y nginx

# Allow traffic on port 80 (default HTTP port)
sudo ufw allow 'Nginx HTTP'

# Create a basic "Hello World!" index page
echo "Hello World!" | sudo tee /var/www/html/index.html

# Create a custom 404 page with the specified message
echo -e "Ceci n'est pas une page\n" | sudo tee /var/www/html/404.html

# Configure permanent redirect for /redirect_me
sudo sed -i '/listen 80 default_server/a\ return 301 https://www.linkedin.com/in/aya-anwar-473115279/;' /etc/nginx/sites-available/default

# Configure custom error page for 404 errors
sudo sed -i "/server {/ a\    error_page 404 /404.html;" /etc/nginx/sites-available/default

# Restart Nginx (without systemctl)
sudo service nginx restart

# #!/usr/bin/env bash
# # a Bash script containing commands to automatically configure a Ubuntu machine so that /redirect_me is redirecting to another page “301 Moved Permanently”
