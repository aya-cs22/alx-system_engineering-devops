#!/usr/bin/env bash

# Update package lists and install Nginx
sudo apt-get -y update
sudo apt-get -y install nginx

# Allow Nginx through UFW
sudo ufw allow 'Nginx HTTP'

# Create index.html and 404.html
echo "Hello World!" | tee /var/www/html/index.html
echo -e "Ceci n'est pas une page\n" | tee /var/www/html/404.html

# Configure Nginx to serve "Hello World!" at root and set up redirection


# Include the custom configuration
sudo ln -s /etc/nginx/conf.d/custom.conf /etc/nginx/sites-enabled/

# Test Nginx configuration
sudo nginx -t

# Reload Nginx to apply changes
sudo service nginx restart
# #!/usr/bin/env bash
